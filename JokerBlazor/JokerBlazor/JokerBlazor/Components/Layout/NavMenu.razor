<MudNavMenu>
    <MudNavLink Href="/jokes" Match="NavLinkMatch.All">
        <MudIcon Icon="@Icons.Material.Filled.SentimentVerySatisfied" /> Jokes
    </MudNavLink>
    <MudNavGroup Title="Default Blazor Pages" Expanded="@_expanded">
        <MudNavLink Href="/" Match="NavLinkMatch.All">
            <MudIcon Icon="@Icons.Material.Filled.House" /> Home
        </MudNavLink>
        <MudNavLink Href="/counter" Match="NavLinkMatch.All">
            <MudIcon Icon="@Icons.Material.Filled.Add" /> Counter
        </MudNavLink>
        <MudNavLink Href="/weather" Match="NavLinkMatch.All">
            <MudIcon Icon="@Icons.Material.Filled.WbSunny" /> Weather
        </MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code {
    private bool _expanded = false;

    private void SubMenuToggle() => _expanded = !_expanded;
}